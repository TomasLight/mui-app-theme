{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",

    "baseUrl": "./src/",
    "paths": {
      "@app-theme": ["./index"],
      "@app-theme/colors": ["./colors/index"],
      "@app-theme/overrides": ["./overrides/index"],
      "@app-theme/styles": ["./colors/styles"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
