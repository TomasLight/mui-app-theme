{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",

    "baseUrl": "./",
    "paths": {
      "@app-theme": ["./src/index"],
      "@app-theme/*": ["./src/*"],

      "@app-theme/colors": ["./src/colors/index"],
      "@app-theme/colors/*": ["./src/colors/*"],

      "@app-theme/overrides": ["./src/overrides/index"],
      "@app-theme/overrides/*": ["./src/overrides/*"],

      "@app-theme/styles": ["./src/styles/index"],
      "@app-theme/styles/*": ["./src/styles/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
