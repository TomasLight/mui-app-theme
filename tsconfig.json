{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",

    "baseUrl": "./src/",
    "paths": {
      "mui-app-theme": ["index"],
      "mui-app-theme/colors": ["colors/index"],
      "mui-app-theme/overrides": ["overrides/index"],
      "mui-app-theme/styles": ["colors/styles"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
