{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",

    "baseUrl": "./src/",
    "paths": {
      "@app-theme": ["./index.ts"],
      "@app-theme/*": ["./*"],

      "@app-theme/colors": ["./colors/index.ts"],
      "@app-theme/colors/*": ["./colors/*"],

      "@app-theme/overrides": ["./overrides/index.ts"],
      "@app-theme/overrides/*": ["./overrides/*"],

      "@app-theme/styles": ["./styles/index.ts"],
      "@app-theme/styles/*": ["./styles/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
